<div class="row justify-content-md-center">

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-success shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                            Questões acertadas</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800"><%= @user_statistic.right_questions %></div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-grin-beam fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-danger shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-danger text-uppercase mb-1">
                            Questões erradas</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800"><%= @user_statistic.wrong_questions %></div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-frown fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-primary shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                            Total</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800"><%= @user_statistic.total_questions %></div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-question fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<%= render partial: "users_backoffice/welcome/shared/questions", locals: {answered_questions: @answered_questions}%>
