<div>
    <h1>
        <%= t('messages.list', model: @questions.model_name.human(count: 2))%>
        <%= link_to new_admins_backoffice_question_path, class: "btn btn-success btn-circle" do%>
            <i class="fas fa-plus"></i>
        <%end%>
    </h1>

    <hr>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th><%= t_attribute(@questions, :description) %></th>
                <th><%= t_attribute(@questions, :subject) %></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <% @questions.each do |question|%>
                <tr>
                    <th scope="row"><%= question.id %></th>
                    <td><%= sanitize question.description.truncate(50) %></td>
                    <td><%= question.subject.description.truncate(40) %></td></td>
                    <td>
                        <%= link_to admins_backoffice_question_path(question), class: "btn btn-secondary btn-circle" do%>
                            <i class="fas fa-eye"></i>
                        <%end%>
                        <%= link_to edit_admins_backoffice_question_path(question), class: "btn btn-primary btn-circle" do%>
                            <i class="fas fa-edit"></i>
                        <%end%>
                        <%= link_to admins_backoffice_question_path(question), method: :delete, class: "btn btn-danger btn-circle", data: { confirm: t('messages.confirm') } do%>
                            <i class="fas fa-trash"></i>
                        <%end%>
                    </td>

                </tr>
            <%end%>
        </tbody>
    </table>
    <%= paginate @questions %>
</div>

