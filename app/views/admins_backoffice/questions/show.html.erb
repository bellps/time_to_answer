<h2>
    <%= @question.model_name.human %> nยบ <%= @question.id %>
    <%= link_to edit_admins_backoffice_question_path(@question), class: "btn btn-primary btn-circle" do%>
        <i class="fas fa-edit"></i>
    <%end%>
</h2>
<hr>
<p><strong><%= t_attribute(@question, :description) %>: </strong><%= @question.description %></p>
<p><strong><%= t_attribute(@question, :subject) %>: </strong><%= @question.subject.description %></p>

<p>
    <strong><%= @question.answers.model_name.human(count: 2) %>:</strong>
    <ul>
        <% @question.answers.each do |answer| %>
            <% if answer.description.size != 0 %>
                <li><%= answer.description %> <%= "(#{t_attribute(answer, :correct)})" if answer.correct%></li>
            <% end %>
        <% end %>
    </ul>
</p>
<br>
<%= link_to admins_backoffice_questions_path, class: "btn btn-info" do%>
    <i class="fas fa-arrow-left"></i> <%= t('messages.back')%>
<%end%>