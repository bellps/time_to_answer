<div>
    <h1>
        <%= t('messages.list', model: @subjects.model_name.human(count: 2))%>
        <%= link_to new_admins_backoffice_subject_path, class: "btn btn-success btn-circle" do%>
            <i class="fas fa-plus"></i>
        <%end%>
        <%= link_to admins_backoffice_subjects_path(format: :pdf), class: "btn btn-danger btn-circle" do%>
            <i class="fas fa-file-pdf"></i>
        <%end%>
    </h1>

    <hr>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th><%= t_attribute(@subjects, :description)%></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <% @subjects.each do |subject|%>
            <tr>
                <th scope="row"><%= subject.id %></th>
                <td><%= subject.description %></td>
                <td>
                    <%= link_to edit_admins_backoffice_subject_path(subject), class: "btn btn-primary btn-circle" do%>
                        <i class="fas fa-edit"></i>
                    <%end%>
                    <%= link_to admins_backoffice_subject_path(subject), method: :delete, class: "btn btn-danger btn-circle", data: { confirm: t('messages.confirm') } do%>
                        <i class="fas fa-trash"></i>
                    <%end%>
                </td>

            </tr>
            <%end%>
        </tbody>
    </table>
    <%= paginate @subjects %>
</div>

