<div>
    <div class="login_wrapper">
        <div class="">
            <section class="login_content">
                <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                    <h1>Sign up</h1>
                    <div>
                        <%= f.label :email %>
                        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "user@user.com" %>
                    </div>
                    <div>
                        <%= f.label :password %>
                        <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "******", minlength: @minimum_password_length %>
                    </div>

                    <div>
                        <%= f.label :password_confirmation %><br />
                        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "******" %>
                    </div>
                    <br>
                    <div class="text-center">
                        <%= f.submit "Sign up", class: "btn btn-secondary" %>
                    </div>
                    <br>
                    <div class="clearfix"></div>
                        <%= render "users/shared/links" %>
                    <div class="separator">
                    </div>

                    <% unless resource.errors.empty? %>
                        <% resource.errors.full_messages.each do |msg| %>
                            <%= render partial: "layouts/flash", locals: { msg: msg } %>
                        <% end %>
                    <% end %>
                <% end %>
            </section>
        </div>
    </div>
</div>

