<div class="login_wrapper">
    <section class="login_content">
        <h2>Change your password</h2>

        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>

        <div class="field">
            <%= f.label :password, "New password" %><br />
            <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control", placeholder: "******", minlength: @minimum_password_length %>
        </div>

        <div class="field">
            <%= f.label :password_confirmation, "Confirm new password" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "******" %>
        </div>

        <div class="actions">
            <%= f.submit "Change my password", class: "btn btn-secondary" %>
        </div>
        <% end %>
        <div class="separator">
        </div>
        <%= render "users/shared/links" %>
    </section>
</div>